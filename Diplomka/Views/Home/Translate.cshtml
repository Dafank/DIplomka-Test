@model List<string>
@using Diplomka.HtmlGenerator;
@{
    ViewBag.Title = "Translate";
    Layout = "~/Views/Shared/_Cover.cshtml";
}

@section Style{
<link href="/Content/CSS/Pages/Translate/Translater.css" rel="stylesheet" />
}

@using (Html.BeginForm("Translate", "Home", FormMethod.Post))
{
        @Html.TextBox("Word", null, new { @class = "input-word", placeholder = "Enter your word here" })
        <input class="btn-translate" type="submit" value="Translate" />
}

@if (Model != null)
{
    @Html.Translated(ViewBag.word as string, Model)
}




